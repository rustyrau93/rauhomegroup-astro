---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  title="Page Not Found"
  description="The page you're looking for doesn't exist."
>
  <section class="error-page">
    <div class="container">
      <div class="error-content">
        <span class="error-code">404</span>
        <h1>Page Not Found</h1>
        <p>Looks like this property has been taken off the market. Let's find you something better.</p>
        <div class="error-actions">
          <a href="/" class="cta-button">Back to Home</a>
          <a href="/neighborhoods" class="cta-button secondary">Explore Neighborhoods</a>
        </div>
        <div class="error-contact">
          <p>Need help finding something? <a href="/contact">Contact Rusty</a></p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .error-page {
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-xl) var(--spacing-md);
    text-align: center;
  }
  
  .error-content {
    max-width: 500px;
  }
  
  .error-code {
    font-family: var(--font-display);
    font-size: 8rem;
    font-weight: 700;
    color: var(--color-gold);
    line-height: 1;
    display: block;
    margin-bottom: 1rem;
  }
  
  .error-content h1 {
    font-family: var(--font-display);
    font-size: 2.5rem;
    color: var(--color-primary);
    margin-bottom: 1rem;
  }
  
  .error-content > p {
    color: var(--color-gray);
    font-size: 1.1rem;
    margin-bottom: 2rem;
  }
  
  .error-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 2rem;
  }
  
  .error-contact {
    color: var(--color-gray);
    font-size: 0.9rem;
  }
  
  .error-contact a {
    color: var(--color-gold);
    text-decoration: underline;
  }
</style>
